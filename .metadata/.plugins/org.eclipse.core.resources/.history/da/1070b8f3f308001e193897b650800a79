package com.bit.springboard.dto;

public class PageDTO {
	//표출할 첫 페이지의 번호
	private int startPage;
	//표출할 끝 페이지 번호
	private int endPage;
	//이전, 다음 표출 여부
	private boolean prev, next;
	//총 게시글의 수
	private int total;
	//크리테리아 객체
	private Criteria cri;
	
	//생성자
	public PageDTO(Criteria cri, int total) {
		this.cri = cri;
		this.total = total;
	}
	
	
}
